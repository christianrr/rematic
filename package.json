    "serve-static": "1.13.2",
    "socket.io": "2.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "xo": "^0.24.0"
  },
  "xo": {
    "space": 4,
    "globals": [
